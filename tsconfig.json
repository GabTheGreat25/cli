{
  "exclude": ["node_modules", "templates", "lib", "**/*.spec.ts", "ui"],
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./",
    "target": "es5",
    "lib": ["dom", "es5", "es2015", "es2016", "es2017", "esnext"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true
  }
}
